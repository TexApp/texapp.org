!!!
%html{:lang => :en}
  %head
    %meta{:charset => "UTF-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %title Tex App.â€”Online
    %link{:rel => :stylesheet, :href => "/stylesheets/bootstrap.min.css"}
    %link{:rel => :stylesheet, :href => "/stylesheets/bootstrap-responsive.min.css"}
    %link{:rel => :stylesheet, :href => "/stylesheets/datepicker.css"}
    - if defined? d3
      %link{:rel => :stylesheet, :href => "/stylesheets/rickshaw.min.css"}
    %link{:rel => :stylesheet, :href => "/stylesheets/styles.css"}
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-toggle" => "collapse", "data-target" => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
              %a.brand.sc{:href => "/"} TexApp.org
          .nav.collapse.nav-collapse
            %ul.nav
              - links = {'<i class="icon-home"></i>' => '/', 'About' => '/about', "Citation" => "/citation", "Technology" => "/technology", "Statistics" => "/statistics"}
              - links.each do |title, url|
                %li{class: request.path_info == url && 'active'}
                  %a{:href => url}!= title
          %form#search.form-search.navbar-search.pull-right{:method => :get, :action => "/search"}
            .input-append
              %input.span2.search-query{:type => "text", :name => :query, :placeholder => "Search terms or Docket #"}
              %button.btn{:type => "submit"} Search
    .container
      = yield
      %hr
      %footer
        %small.pull-right
          Brought to you by
          %a{:href=> "http://www.doncruse.com"} Don Cruse
          &amp;
          %a{:href => "http://www.kemitchell.com"} Kyle Mitchell
    %script{:src => "http://code.jquery.com/jquery-latest.js"}
    %script{:src => "/javascripts/bootstrap.min.js"}
    %script{:src => "/javascripts/bootstrap-datepicker.js"}
    %script{:src => "/coffeescripts/interface.js"}
    - if defined? d3
      %script{ :src => '/javascripts/d3.min.js' }
      %script{ :src => '/javascripts/d3.layout.min.js' }
      %script{ :src => '/javascripts/rickshaw.min.js' }
    - if defined? js
      %script{ :src => js }
